{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["jest", "cypress"],
    "incremental": true,
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "mdx.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".yarn", "custom-test-env.js", "cypress/**/*"]
}
